<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/bg_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_activite2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="@string/activity_2_text"
                android:textColor="@color/text_color"
                android:textSize="20dp"
                android:layout_margin="20dp">

            </TextView>

            <EditText
                android:id="@+id/OACI2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/edittextstyle"
                android:textColor="@color/bar_color"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="15dp"></EditText>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_destination"
                android:backgroundTint="@color/bar_color"
                android:text="@string/Button_activity2"
                android:layout_marginBottom="15dp"
                android:textColor="@color/text_color"
                android:layout_gravity="center"></Button>

            <ListView
                android:id="@+id/list_aero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clear"
                android:drawableLeft="@drawable/trash"
                android:text="@string/clear"
                android:layout_gravity="center"
                android:backgroundTint="@color/bar_color"
                android:textColor="@color/text_color">

            </Button>

        </LinearLayout>

    </FrameLayout>


</RelativeLayout>